<%= simple_form_for @user, :url => dashboard_user_path, remote: true, html: { class: "storytime-modal-form", data: { redirect: "index" } } do |f| %>
  <div class="scroll-panel">
    <div class="scroll-panel-header">
      <%= link_to icon("angle-left"), [:dashboard, Storytime.user_class], class: "btn btn-sm btn-default pull-left storytime-modal-trigger", remote: true %>
      <%= f.submit "Save", class: "btn btn-sm btn-primary btn-outline pull-right" %>
      <h3 class="scroll-panel-title">
        <%= t('dashboard.users.edit_user_header') %>
      </h3>
    </div>
    <div class="scroll-panel-body">

      <%= render 'storytime/dashboard/settings_tabs.html.erb' %>
      
      <input type="hidden" value="<%= params[:controller].camelize %>" id="storytime-modal-controller">
      <input type="hidden" value="<%= params[:action].camelize %>" id="storytime-modal-action">
      
      <%= f.input :storytime_name %>
      <%= f.input :email %>

      <%= f.simple_fields_for :memberships do |mf| %>
        <%= mf.association :storytime_role, include_blank: false, label_method: :label, input_html: { disabled: @user == @site.creator } %>
        <%= mf.input :_destroy, as: :boolean, label: "Delete membership" unless @user == @site.creator %>
      <% end %>
    </div>
  </div>
<% end %>