<div id="main" class="wysiwyg">
  <div class="scroll-panel">
    <div class="scroll-panel-header">
      <div class="pull-left">

        <%= link_to "#", class: "btn btn-default btn-icon", data: { toggle: "off-canvas",  target: "#dashboard-nav" } do %>
          <i class="icon-st-icons-st-logo"></i>
        <% end %>

        <%= link_to [:dashboard, current_post_type], class: "btn btn-default btn-scroll-panel-header" do %>
          <%= icon('angle-left') %>
          <span class="hidden-xs"><%= @post.human_name.pluralize %></span>
        <% end %>
      </div>
      <div class="pull-right">
        <%= link_to "#", class: "btn btn-default btn-icon margin-right", data: { toggle: "codemirror" } do %>
          <i class="fa fa-code" style="top: -1px;"></i>
        <% end %>
        <% if Storytime.enable_file_upload && !@post.is_a?(Storytime::Page) && !@post.is_a?(Storytime::Blog) %>
          <%= link_to '#', class: "btn btn-default btn-icon margin-right", data: { toggle: "collapse", target: '#featured-images-panel' } do %>
            <i class="icon-st-icons-images"></i>
          <% end %>
        <% end %>
        <button id="preview_post" class="btn btn-primary btn-outline btn-sm margin-right">Preview</button>
        <%= link_to "Save / Publish", "#", class: 'btn btn-primary btn-sm btn-outline', data: { toggle: 'collapse', target: '#post-advanced-settings' } %>
      </div>
    </div>
    <%= render 'storytime/dashboard/posts/image_toolbar' %>
    <div class="scroll-panel-body" style="top: 130px;" data-top="130px">
      <%= render "form" %>
    </div>
  </div>
</div>